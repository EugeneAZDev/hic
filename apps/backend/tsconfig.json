{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noEmit": false,
    "baseUrl": ".",
    "paths": {
      "@hic/shared-dto": ["../../packages/shared/dto/src"],
      "@hic/shared-schemas": ["../../packages/shared/schemas/src"],
      "@hic/shared-security": ["../../packages/shared/security/src"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["dist", "node_modules"]
}