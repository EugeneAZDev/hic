{
  "name": "hic",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "build:worker-service": "turbo run build --filter=@hic/worker-service",
    "build:auth-service": "turbo run build --filter=@hic/auth-service", 
    "dev": "turbo run dev --parallel",
    "dev:worker-service": "turbo run dev --filter=@hic/worker-service",
    "lint": "turbo run lint",
    "format": "turbo run format",
    "prisma:generate": "pnpm --filter=@hic/prisma-main run db:generate && pnpm --filter=@hic/prisma-auth run db:generate"
  },
  "devDependencies": {
    "prisma": "^5.0.0",
    "turbo": "^1.13.4"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@8.6.0"
}
